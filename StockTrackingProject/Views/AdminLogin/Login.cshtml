
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>

    <div class="container  mt-5">
        <h3 class="text-center alert alert-warning">Wellcome to Stock Tracking and Management</h3>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 border p-5">
                @using (Html.BeginForm("Login", "AdminLogin", FormMethod.Post))
                {

                    <p class="text-center">@ViewBag.Message</p>

                    <div>
                        <h3 class="alert alert-warning text-center mt-3"> <i class="fas fa-user"></i> ADMIN</h3>
                    </div>
                    <div>
                        <input type="text" name="userName" placeholder="Username" class="form-control" />
                    </div>
                    <br />
                    <div>
                        <input type="password" name="Password" value="" placeholder="Password" class="form-control" />
                    </div>
                    <br />
                    <div class="row">
                        <button class="btn btn-outline-dark col-md-12">Login</button>
                    </div>

                }

            </div>
            <div class="col-md-3"></div>
        </div>
        <a href="/Contact/Contact/">Press for Contact and Stock! </a><br />

    </div>
</body>
</html>
