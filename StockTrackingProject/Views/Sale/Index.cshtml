@model List<StockTrackingProject.Models.Entity.Sale>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<h2>Sales</h2>
<table class="table" id="tbl1">
    <thead>
        <tr>
            <th>Id</th>
            <th>Unit</th>
            <th>Price</th>
            <th>Date</th>
            <th>Product </th>
            <th>Customer </th>
            <th>Update</th>
            <th>Delete</th>
            <th>Detail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <td>@item.Unit</td>
                <td>@item.Price (₺)</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Product.Name</td>
                <td>@item.Customer.Name @item.Customer.Surname</td>
                <td><a class="btn btn-outline-secondary" href="/Sale/Update/@item.Id">Update</a></td>
                <td><a class="btn btn-danger" href="/Sale/Delete/@item.Id">Delete</a></td>
                <td><a class="btn btn-warning" href="/Sale/Detail/@item.Id">Detail</a></td>
            </tr>
        }

    </tbody>

</table>
<a class="btn btn-outline-success" href="/Sale/AddNew" style="float:right">Add New Sale</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

    $('#tbl1').dataTable({});

</script>